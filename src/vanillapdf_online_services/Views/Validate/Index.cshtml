@model vanillapdf_online_services.Models.ViewModels.ValidateFileViewModel

@{
    ViewData["Title"] = Loc["Validate file"];
}

@using (Html.BeginForm("Index", "Validate", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.UploadedFile, Loc["Uploaded File"].Value)
        <input type="file" name="UploadedFile" />
        @Html.ValidationMessageFor(model => model.UploadedFile, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-default">@Loc["Validate"]</button>
}
