<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>vanillapdf</id>
    <title>vanillapdf 1.5.1</title>
    <version>1.5.1</version>
    <authors>Vanilla.PDF Labs s.r.o.</authors>
    <owners>Vanilla.PDF Labs s.r.o.</owners>
    <license type="file">LICENSE.txt</license>
    <icon>images\vanilla_logo.png</icon>
    <projectUrl>https://vanillapdf.com/</projectUrl>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <description>Vanilla.PDF is a cross-platform SDK for creating and modifying PDF documents</description>
    <copyright>Copyright 2018-2020 Vanilla.PDF Labs s.r.o.</copyright>
    <tags>pdf parsing sign native</tags>

    <dependencies>
      <group targetFramework="native" />
      <group targetFramework="netstandard" />
    </dependencies>
  </metadata>

  <files>
    <!-- Configuration files -->
    <file src="vanillapdf_native.targets" target="build\native\vanillapdf.targets" />
    <file src="vanillapdf_net.targets" target="build\netstandard\vanillapdf.targets" />

    <!-- Windows files -->
    <file src="build\win-x86_v140\src\vanillapdf\Release\*.dll" target="runtimes\win-x86\native" />
    <file src="build\win-x64_v140\src\vanillapdf\Release\*.dll" target="runtimes\win-x64\native" />

    <file src="build\win-x86_v140\src\vanillapdf\Release\*.lib" target="lib\native\win-x86" />
    <file src="build\win-x64_v140\src\vanillapdf\Release\*.lib" target="lib\native\win-x64" />

    <!-- Linux files -->
    <file src="build\vanillapdf_1.5.1_i386\lib\*.so" target="runtimes\linux-x86\native" />
    <file src="build\vanillapdf_1.5.1_amd64\lib\*.so" target="runtimes\linux-x64\native" />

    <!-- Header include files -->
    <file src="..\include\**\*.h" target="build\native\include" />

    <!-- This is a placeholder file, so we can target netstandard without a warning -->
    <file src="_._" target="lib\netstandard" />

    <!-- Additional dependencies -->
    <file src="..\LICENSE.txt" target="" />
    <file src="..\CHANGELOG.txt" target="" />
    <file src="..\cmake\README.txt" target="" />
    <file src="..\cmake\vanilla_logo.png" target="images" />
  </files>
</package>